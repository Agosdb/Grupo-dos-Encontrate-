<!DOCTYPE html>
<html>
  
    <body>
        <link rel="stylesheet" href="/css/products.css">
        <!-- se incluye Head -->
       <%-include('./partials/head') %>
       <!-- Se incluye Header -->
       <%-include('./partials/header') %>
   
       <!-- /* Definición categorías de productos*/ -->
       <!-- de la pagina original solo se confecciono el recuadro principal. -->
       <main>
            <a href="/products" class="action-button edit">CREAR PRODUCTO</a>

       <div class="page">    
           <section class="category-product">
               <!-- /*en pantalla ampliada las imagenes estan al lado izquier*/ -->
               <div class="article_banner_left">
                   <div class="img-Principal">
                       <img src="img/<%= products.image %> " alt="<%= products.name %>">
                    </div>
                   </div>
               <div class="article_banner_right">
                   <div class="main-article">
                       <p class="activity"><%= products.activity %></p>                 
                       <img class="logo" src="img/<%= products.logo %>">                                                            
                       <h1><%= products.resenia %></h1>
                       <p> <%= products.description %></p>
                   </div>
                   <div class="price-box">
                       <h5 class="regularPrice">Precio Regular</h5> 
                       <h2> <%= products.price %> </h2>
                       <h6 class="salesPrice">Precio Promoción</h6>
                       <h3>
                       <span class="salesPrice"><%= products.salesPrice %></span>
                       </h3>
                   </div>
                </div>  
            </div>   
           </section> 
       
               
                   
   </main>         
    <!-- Se incluye Footer -->
   
    <%-include('./partials/footer') %>   
                   
                     
   </body>
   </html>